
# Base directory for raw input datasets
BASE_DIR=data

# Directory for cleaned/processed outputs
OUTPUT_DIR=clean

# Directory for generated reports
REPORT_DIR=reports

# Default file format for outputs (csv or parquet)
DEFAULT_FORMAT=csv

# Path to memory file (optional)
MEMORY_FILE=agent_memory.json

# Recipe and rules directories
RECIPE_DIR=recipes
RULES_DIR=rules

# Logging level (INFO, DEBUG)
LOG_LEVEL=INFO

# --- LLM / GenAI configuration ---
# Choose backend: 'vertex' (Gemini) or 'openai'. If unset, the client will
# auto-detect based on available credentials.
LLM_BACKEND=vertex

# Vertex / Gemini (Google Cloud) settings
# Path to service account JSON for Vertex access
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GCP project id
GOOGLE_CLOUD_PROJECT=my-gcp-project
# GCP location (optional, defaults to us-central1 in the client)
GOOGLE_CLOUD_LOCATION=us-central1
# Vertex model id (e.g. gemini-1.5) or the full resource name
VERTEX_MODEL=gemini-1.5

# OpenAI fallback (if using OpenAI instead of Vertex)
OPENAI_API_KEY=sk-...
# Optionally set the default OpenAI model id
OPENAI_MODEL=gpt-3.5-turbo
